<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= render 'users/profile' %>

		<h2>New book</h2>
		<%= render 'books/form' %>
	</div>

	<div class="col-xs-9" id="book_detail">
		<h2>Book detail</h2>
		<table class="table table-hover table-inverse">
			<tbody>
				<tr id="book_<%= @book.id %>">
					<%= render 'books/item', book: @book %>
				</tr>
			</tbody>
		</table>
	</div>
</div>

